<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/input_search"
        style="@style/Widget.AppCompat.TextView.General"
        android:layout_width="@dimen/space_zero"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_large"
        android:layout_marginRight="@dimen/space_large"
        android:backgroundTint="@color/white"
        android:gravity="right"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/txt_title"
        style="@style/Widget.AppCompat.TextView.General"
        android:layout_width="@dimen/space_zero"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/space_medium"
        android:gravity="right|center_vertical"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btn_clear"
        app:layout_constraintRight_toLeftOf="@id/btn_search" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/btn_search"
        style="@style/AppCompatImageView.General"
        android:layout_width="@dimen/space_xlarge"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/space_large"
        android:src="@drawable/round_search_white_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/btn_clear"
        style="@style/AppCompatImageView.General"
        android:layout_width="@dimen/space_xlarge"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_large"
        android:src="@drawable/round_clear_white_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>